<!DOCTYPE>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="./boostrap/css/bootstrap.css" />
	<link href="/boostrap/css/bootstrap.css"/>
	<script type="text/javascript" src="/jquery.min.js"></script>
	<script type="text/javascript" src="/jquery.event.drag-2.0.js"></script>
	<script src="/socket.io-1.4.5.js"></script>

  <script>
		var team_name =  <%- JSON.stringify(team_name) %>;
		var team_img = <%- JSON.stringify(team_name) %> ;
		var team_status = <%- JSON.stringify(status) %> ;
		var team_score = <%- JSON.stringify(score) %>;
		var team_num = <%= team_num %> ;
	</script>
	<script type="text/javascript" src="/controller20.js"></script>



	<title>controller20</title>
</head>
<body>

		<div class="container-fluid">
				<div class="row well">
						<div class="col-xs-1">
							<div class="btn btn-lg btn-primary hidden" id="reset_time">Reset</div>
						</div>
						<div class="col-xs-1">
							<div class="btn btn-lg btn-primary hidden" id="start_time">start</div>
						</div>
						<div class="col-xs-1">
							<div class="btn btn-lg btn-primary hidden" id="stop_time">stop</div>
						</div>
						<div class="col-xs-3">
							<div class="btn btn-lg btn-primary hidden" id="sent_result">sentResult to monitor</div>
						</div>
						<div class="col-xs-3">
							<div class="btn btn-lg btn-primary" id="update_score">updateScoreboard</div>
						</div>
						<div class="col-xs-3">
							<div class="btn btn-lg btn-primary" id="reset_new">Next</div>
						</div>
						<div class="col-xs-2">
							<div class="btn btn-lg btn-primary hidden" id="save_status">savestatus</div>
						</div>
			</div>

			<div class="center-block row col-lg-6">
				<table class="table table-bordered">
						<tr>
								<th>id</th>
								<th>name</th>
								<th>score</th>
								<th>status</th>


								<th>true1</th>
								<th>true2</th>
								<th>false1</th>
								<th>false2</th>
								<th>new score</th>
								<th>SUM score</th>

						</tr>
						<% for(var i=1 ; i< 8 ; i++){ %>
							<tr>
								<td><%= i %></td>
								<td id="name<%= i %>"></td>
								<td id="score<%= i %>"></td>
								<td id="status<%= i %>">
									<button class="btn btn-sm btn-primary" id="status_<%= i %>" onclick="updateStatus(<%= i %>,1)">1</button>
									<button class="btn btn-sm bg-default" id="status_<%= i %>" onclick="updateStatus(<%= i %>,0)">0</button>
								</td>

								<td id="option_true_1_<%= i %>">
									<button class="btn btn-sm btn-success" id="opt_true_1_<%= i %>" onclick="sentOption(<%= i %>,3)">+3</button>
								</td>
								<td id="option_true_2_<%= i %>">
									<button class="btn btn-sm btn-success" id="opt_true_2_<%= i %>" onclick="sentOption(<%= i %>,2)">+2</button>
								</td>
								<td id="option_false_1_<%= i %>">
									<button class="btn btn-sm btn-danger" id="opt_false_1_<%= i %>" onclick="sentOption(<%= i %>,0)">-0</button>
								</td>
								<td id="option_false_2_<%= i %>">
									<button class="btn btn-sm btn-danger" id="opt_false_2_<%= i %>" onclick="sentOption(<%= i %>,-1)">-1</button>
								</td>
								<td id="newscore<%= i %>"></td>
								<td id="sumscore<%= i %>"></td>

							</tr>
						<% } %>


				</table>
			</div>

		</div>


</body>
